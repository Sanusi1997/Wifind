@{
    ViewData["Title"] = "Wi-Find Buyer | Payment Page";
}

@model PaymentPageViewModel

<div class="mx-auto">
    <div class="row">
        <div class="col-4">

        </div>
        <div class="col-4">
            <form asp-controller="Dashboard" asp-action="MakePayment">
                <h3 class="text-white">Pay $<b>@Model.wifi.Price</b> for <b>@Model.wifi.WifiName</b></h3>

                <input asp-for="payment.PaymentAmount" value="@Model.wifi.Price" type="hidden" />
                <input asp-for="payment.WifiId" value="@Model.wifi.WifiId" type="hidden" />
                <input asp-for="payment.WifindUserId" value="@Model.wifi.WiFindUserId" type="hidden" />
                <div class="row mt-3 mb-3">
                    <label for="CardName" class="col-sm-4 col-form-label">Name</label>
                    <div class="col-sm-8">
                        <input type="text" for="CardName" class="form-control" name="Cardname">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="CardNumber" class="col-sm-4 col-form-label">Card Number</label>
                    <div class="col-sm-8">
                        <input type="text" for="CardNumber" class="form-control" name="CardNumber">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Expiry Date" class="col-sm-4 col-form-label">Expiry Date</label>
                    <div class="col-sm-8">
                        <input class="form-control" type="text" placeholder="MM / YY" name="ExpiryDate" maxlength="7" />
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="CVV" class="col-sm-4 col-form-label">Security Code</label>
                    <div class="col-sm-8">
                        <input type="password" class="form-control" name="CVV">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="Address" class="col-sm-4 col-form-label">Address</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="Address">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="ZIP" class="col-sm-4 col-form-label">ZIP</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" name="ZIP">
                    </div>
                </div>
                <div class="row mb-3">
                    <label for="EmailAddress" class="col-sm-4 col-form-label">Email Address</label>
                    <div class="col-sm-8">
                        <input type="email" class="form-control" name="EmailAddress">
                    </div>
                </div>
                <div class="row mb-3">
                    <button class="btn btn-primary" id="paymentDetailSubmit" type="Submit">Submit </button>
                </div>
            </form>
        </div>
        <div class="col-4">

        </div>
    </div>
</div>